<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_drc_echo_test_tree" model="ir.ui.view">
            <field name="name">drc.echo.test.tree</field>
            <field name="model">drc.echo.test</field>
            <field name="arch" type="xml">
                <tree string="Prueba de eco">
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_drc_echo_test_form" model="ir.ui.view">
            <field name="name">drc.echo.test.form</field>
            <field name="model">drc.echo.test</field>
            <field name="arch" type="xml">
                <form string="Prueba eco">
                    <header>
                        <button name="set_to_sample_collection" states="draft" string="Capturada" type="object"
                                class="oe_highlight"/>
                        <button name="set_to_test_in_progress" states="sample_collection" string="En progreso"
                                type="object" class="oe_highlight"/>
                        <button name="print_lab_test" states="completed" string="Imprimir resultado" type="object"
                                class="oe_highlight"/>
                        <button name="cancel_test" states="draft" string="Cancelar" type="object"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,sample_collection,test_in_progress,completed"
                               statusbar_colors='{"Completed":"blue","Test In Progress":"red","Invoiced":"grey"}'/>
                    </header>
                    <sheet>
                        <div class="oe_left" style="width: 500px;">
                            <div class="oe_title" style="width: 390px;">
                                <label class="oe_edit_only" for="name"/>
                                <h1>
                                    <field name="name" class="oe_inline"/>
                                </h1>
                            </div>
                        </div>
                        <group>
                            <group col="4" colspan="4">
                                <field name="patient_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="date"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Sección A">
                                <group>
                                    <group>
                                        <field name="template_sa_id"
                                               string="Plantilla de APROXIMACIONES PARAESTERNALES"/>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                                <field name="attribute_value_line_sa_ids">
                                    <tree string="Variables de sección" editable="bottom">
                                        <field name="result_value"/>
                                        <field name="section_value"/>
                                        <field name="unit"/>
                                        <field name="interval"/>
                                        <field name="denomination_type" invisible="0" force_save="1"/>

                                    </tree>
                                </field>
                            </page>
                            <page string="Sección B">
                                 <group>
                                    <group>
                                        <field name="template_sb_id" string="Plantilla de APROXIMACIONES APICALES"/>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                                <field name="attribute_value_line_sb_ids">
                                    <tree string="Variables de sección" editable="bottom">
                                        <field name="result_value"/>
                                        <field name="section_value"/>
                                        <field name="unit"/>
                                        <field name="interval"/>
                                        <field name="denomination_type" invisible="0" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Sección C">
                                <group>
                                    <group>
                                        <field name="template_sc_id" string="Plantilla de APROXIMACIONES SUBCOSTALES"/>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                                <field name="attribute_value_line_sc_ids">
                                    <tree string="Variables de sección" editable="bottom">
                                        <field name="result_value"/>
                                        <field name="section_value"/>
                                        <field name="unit"/>
                                        <field name="interval"/>
                                        <field name="denomination_type" invisible="0" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Sección D">
                                <group>
                                    <group>
                                        <field name="template_sd_id" string="Plantilla de APROXIMACIONES SUPRAESTERNALES"/>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                                <field name="attribute_value_line_sd_ids">
                                    <tree string="Variables de sección" editable="bottom">
                                        <field name="result_value"/>
                                        <field name="section_value"/>
                                        <field name="unit"/>
                                        <field name="interval"/>
                                        <field name="denomination_type" invisible="0" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Sección E">
                                <group>
                                    <group>
                                        <field name="template_se_id" string="Plantilla de OTRAS APROXIMACIONES"/>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                                <field name="attribute_value_line_se_ids">
                                    <tree string="Variables de sección" editable="bottom">
                                        <field name="result_value"/>
                                        <field name="section_value"/>
                                        <field name="unit"/>
                                        <field name="interval"/>
                                        <field name="denomination_type" invisible="0" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="Note"
                                  string="Notas">
                                <field name="comment"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_drc_echo_test_search" model="ir.ui.view">
            <field name="name">drc.echo.test.search</field>
            <field name="model">drc.echo.test</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Prueba echo">
                    <field name="patient_id"/>
                    <field name="date"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter name="patient_id" string="Paciente"
                                domain="[]" context="{'group_by':'patient_id'}"/>
                        <filter name="date" string="Fecha"
                                domain="[]" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_drc_echo_test_view">
            <field name="name">Prueba ECO</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">drc.echo.test</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_drc_echo_test_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Crear prueba de Ecocardiograma.
                </p>
            </field>
        </record>

        <record model="ir.sequence" id="seq_drc_echo_test">
            <field name="name">echo sequencee</field>
            <field name="code">drc.echo.test</field>
            <field name="prefix">ECO</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

        <menuitem id="menu_drc_echo_test_root" name="Examenes" sequence="10"
                  parent="menu_root_echo"
                  groups="group_drc_echo_management_user"/>
        <menuitem id="menu_drc_echo_test" name="Prueba ECO" sequence="10"
                  parent="menu_drc_echo_test_root" action="act_open_drc_echo_test_view"
                  groups="group_drc_echo_management_user"/>
    </data>
</odoo>
